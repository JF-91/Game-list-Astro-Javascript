---
import CardBlog from "./components/CardBlog.astro";
import CardFaqAccordion from "./components/CardFaqAccordion.astro";

---

<div class="container">

    <div  class="container-card-blog">
        <CardBlog />
    </div>

    <div class="container-card-faq">
        <CardFaqAccordion />
    </div>
</div>

<style lang="scss">
@import '../../assets/sass/main.scss';

.container {
    position: sticky;
    left: 0; 
    bottom: 0;
    top: 0; 
    padding: 20px;
    width: 100%;
    height: max-content;
    right: 0;
    border:25px; 
    border-style:solid; 
    border-color:#000000;
    background-color: $white;

    > div {
        margin-bottom: 24px;
    }
}

.container-card-blog {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100vh;
    background-color: $yellow;
}
</style>